generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id             Int             @id @default(autoincrement())
  title          String
  description    String
  imageUrl       String
  openToEveryone Boolean         @default(false)
  slug           String
  content        CourseContent[]
  certIssue      Boolean         @default(false)
  purchasedBy    UserPurchases[]
}

model CourseContent {
}

model UserPurchases {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  course     Course   @relation(fields: [courseId], references: [id])
  courseId   String
  assignedAT DateTime @default(now())

  @@id([userId, courseId])
}

model Content {
  id          Int             @id @default(autoincrement())
  type        String          @default("folder")
  title       String
  hidden      Boolean         @default(false)
  description String?
  thumbnail   String?
  parentId    Int?
  parent      Content?        @relation("ContentToContent", fields: [parentId], references: [id])
  courses     CourseContent[]
  children    Content[]       @relation("ContentToContent")
  createdAt   DateTime        @default(now())
}
